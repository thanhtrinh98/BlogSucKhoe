@model SKV.Models.ThucDon

@{
    ViewBag.Title = "Trang Quản Lí";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<h2>Sửa Thực Đơn</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Thực Đơn</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.HinhAnh)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HinhAnh)
            @Html.ValidationMessageFor(model => model.HinhAnh)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TenMonAn)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TenMonAn)
            @Html.ValidationMessageFor(model => model.TenMonAn)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Loai)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Loai)
            @Html.ValidationMessageFor(model => model.Loai)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MoTa)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MoTa)
            @Html.ValidationMessageFor(model => model.MoTa)
        </div>



        <p>
            <input type="submit" value="Cập Nhật" />
        </p>
    </fieldset>
}




@using SKV.Models
@model Login

@{
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html>
<head>
    <title>Đăng nhập</title>

    <!-- Custom Theme files -->
    <link href="~/CSS/login.css" rel="stylesheet" />
    <script src="~/JV/jquery.min.js"></script>

    <!--Google Fonts-->
    <link href='//fonts.googleapis.com/css?family=Roboto+Condensed:400,700' rel='stylesheet' type='text/css'>
</head>
<body>
    <!--header start here-->
    <div class="header">
        <div class="header-main">
            <h1 style="color: #FFCC00">Sức Khỏe Vàng</h1>
            <div class="header-bottom">
                <div class="header-right w3agile">

                    <div class="header-left-bottom agileinfo">


                        @using (Html.BeginForm())
                        {
                            @*<input type="text" value="Tên đăng nhập" name="name" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Tên đăng nhập';}" />*@
                            @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "form-control", @placeholder = "Tên tài khoản" })
                            <center style="color:red;">@Html.ValidationMessageFor(mode => Model.TenDangNhap)</center>
                            @*<input type="password" value="Password" name="password" placeholder="Nhập mật khẩu" onblur="if (this.value == '') {this.value = 'password';}" />*@
                            @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
                            <center style="color:red;"> @Html.ValidationMessageFor(mode => Model.MatKhau)</center>


                            @*<div class="dangki">
            <h6><a href="@Url.Action("Dangki","Home")">Đăng kí</a></h6>
            </div>*@
                            <div class="clear"> </div>


                            <input type="submit" value="Đăng nhập">

                        }
                        <div class="dangki">
                            <h3><a href="@Url.Action("Dangki","Home")">Đăng kí tại đây</a></h3>
                        </div>

                        <div class="header-left-top">
                            <div class="sign-up"></div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!--header end here-->
    <div class="copyright">
        <p>© 2018 Poro177</p>
    </div>
    <script src="js/jquery.min.js"></script>
    <!--footer end here-->
</body>
</html>